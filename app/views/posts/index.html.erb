<section class="sct-color-1 slice">
  <div class="container-fluid masonry-container">
    <div class="row">
      <div class="col-md-8 col-sm-offset-2">
        <div class="masonry-wrapper-cols">
          <div class="masonry-gutter"></div>
          <% @posts.each do |post| %>
          
            <div class="masonry-block">
              <div class="block block-image v1">
                <div class="block-image">
                  <div class="view view-first">
                    <%= link_to post_path(post.id) do %>
                      <%= attachment_image_tag post, :image,:fill, 100, 100 %>
                      <%#= attachment_image_tag post, :image, fallback: "no_image.jpg",size: "100x100", class: "img-circle pull-left profile-thumb" %>
                    <% end %>
                  </div>
                </div>
                <div class="block-content">
                  <%= attachment_image_tag post.member, :profile_image, :fill, 60, 60, fallback: "no_image.jpg", class: "img-circle pull-left profile-thumb" %>
                  <h3 class="block-title">
                    <%= link_to post_path(post.id) do %>
                      <i class="fa fa-map-marker"></i><%= post.title %>
                    <% end %>
                  </h3>
                  <p><%= post.content %></p>
                  <ul class="inline-meta">
                    <li>By
                      <%= post.member.name %>
                    </li>
                    <table>
                    <div id="posts_<%= post.id %>">
                    <%= render "favorites/favorite", post: post %>
                    </div>
                   コメント数<%= post.post_comments.count %>
                   <td>フォロー数:<%= post.member.followings.count %></td>
                   <td>フォロワー数:<%= post.member.followers.count %></td>
                   <td><%= render 'relationships/follow_button', member: post.member %></td>
                    </table>
                  </ul>
                </div>
              </div>
            </div>
          <% end %>
        </div>
      </div>
    </div>
  </div>
</section>
