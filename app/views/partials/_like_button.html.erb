<% if like?(@post) %>
  <%= link_to 'いいね済', like_path(current_user.active_like.find_by(post_id: @post.id)), method: :delete, class:"glyphicon glyphicon-heart", remote: true %>
     
<% else %>
  <%= link_to 'いいね', likes_path(params:{post_id:@post.id}), method: :post, class:"glyphicon glyphicon-heart-empty", remote: true %>
     
<% end %>