<div class="session-maker">
  <%= form_for @user do |f| %>
    <%= render 'partials/errors', obj:f.object %>

    <%= f.label :ユーザーネーム %>
    <%= f.text_field :name, class: "form-control",autofocus: true%>

    <%= f.label :アカウントネーム %><span> (必須)</span>
    <%= f.text_field :account, class: "form-control" %>

    <%= f.label :email %><span> (必須)</span>
    <%= f.text_field :email, class: "form-control" %>

    <%= f.label :パスワード %><span> (必須)</span>
    <%= f.password_field :password, class: "form-control" %>

    <%= f.label :パスワード再入力 %><span> (必須)</span>
    <%= f.password_field :password_confirmation, class: "form-control" %>


    <%= f.submit "新規登録", class:"btn btn-primary" %>
    <%= link_to '戻る', root_path, class:"btn btn-default"%>
  <% end %>
</div>